<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Basic TextView style -->
    <style name="TextViewBasic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Basic TextView Larger style -->
    <style name="TextViewBasic.Large">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <!-- Movie Title TextView style -->
    <style name="TextViewBasic.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/movie_title_text_size</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
    </style>

    <!-- ImageView-->
    <style name="ThumbImageView">
        <item name="android:layout_width">@dimen/image_width</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>
