<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/NoActionBarShadowTheme</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NoActionBarShadowTheme" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>

    <!-- Basic TextView style -->
    <style name="TextViewBasic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <!-- Empty list view message: centre style -->
    <style name="TextViewBasic.CenterEmptyMessage">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:paddingLeft">@dimen/Medium_padding</item>
        <item name="android:paddingRight">@dimen/Medium_padding</item>
    </style>

    <!-- Basic TextView Larger style -->
    <style name="TextViewBasic.Large">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <!-- Movie Title TextView style -->
    <style name="TextViewBasic.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/movie_title_text_size</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- ImageView-->
    <style name="ThumbImageView">
        <item name="android:layout_width">@dimen/image_width</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Style for a tab that displays a fragment in the DetailedActivity -->
    <style name="FragmentTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/FragmentTabTextAppearance</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="FragmentTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#A8A19E</item>
    </style>


</resources>
